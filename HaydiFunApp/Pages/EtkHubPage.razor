<div style="margin:auto; width: fit-content;">
    <table>
        <caption style="background-color: burlywood;">Etkinliklerim</caption>
        <colgroup>
            <col>
            <col>
            <col>
            <col>
            <col>
        </colgroup>
        <thead>
            <tr>
                <th class="tal">ID</th>
                <th>Typ</th>
                <th>Owner</th>
                <th>Avatar</th>
                <th>Info</th>
                <th>Stu</th>
            </tr>
        </thead>
        <tbody>
            @{
                int NOU = 0;
            }
            @foreach (var kv in EtkHub.EtkD)
            {
                char MbrStu = '?';
                var val = kv.Value;
                //var aaa = UsrHub.UsrD.ContainsKey(val.OwnId)
                string OwnUsr = UsrHub.UsrD.ContainsKey(val.OwnId) ? UsrHub.UsrD[val.OwnId].Usr : "!";
                if (kv.Value.MbrD.ContainsKey(USP.UsrId))
                {
                    MbrStu = val.MbrD[USP.UsrId];

                    <tr @key="kv.Key">
                        <td>@val.ETid</td>
                        <td class="tac">@val.TypAd</td>
                        <td>@OwnUsr</td>
                        <td style="padding:0"><img src="@UsrHub.UsrD[val.OwnId].ImgUrl" style="display:block" /></td>
                        <td>@val.Info</td>
                        <td class="tac">@MbrStu</td>
                    </tr>
                    NOU++;
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tac">@NOU</td>
            </tr>
        </tfoot>
    </table>
</div>
